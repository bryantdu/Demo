<header class="navbar navbar-fixed-top">
<div class="navbar-inner">
  <div class="container">
    <%= link_to "Demo app", root_path, id: "logo" %>
    <nav>
    <ul class="nav pull-right">
      <% if signed_in? %>
		<li><%= link_to current_user.name, current_user,:class =>'header-font' %></li>
        <li><%= link_to "Sign out", signout_path,:class =>'header-font', method: "delete" %></li>
      <% else %>
        <li><%= link_to "Sign in", signin_path,:class =>'header-font' %></li>
      <% end %>
    </ul>
    </nav>
  </div>
</div>
</header>