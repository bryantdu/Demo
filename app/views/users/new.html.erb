<div class="center hero-unit">
	<h1>Sign up</h1>
	
	<%= form_for @user , :html => {:class => "form-horizontal span6 offset2"} do |f| %>
		<%= render 'shared/error_messages' %>
		
		<div class="control-group">
			<%= f.label :name, class: "control-label"%>
			<%= f.text_field :name, class: "control" %>
		</div>
		
		<div class="control-group">
			<%= f.label :email, class: "control-label"%>
			<%= f.text_field :email, class: "control" %>
		</div>
		
		<div class="control-group">
			<%= f.label :password, class: "control-label"%>
			<%= f.password_field :password, class: "control" %>
		</div>
		
		<div class="control-group">
			<%= f.label :password_confirmation, "Confirmation", class: "control-label"%>
			<%= f.password_field :password_confirmation, class: "control" %>
		</div>
				
		<%= f.submit "Create my account", class: "btn btn-primary" %>
	<% end %>
</div>